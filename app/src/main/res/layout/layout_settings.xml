<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TextView_sortBy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2A2A"
    android:textAlignment="center">

    <Button
        android:id="@+id/button_back2"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"

        android:background="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_darkMode"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="252dp"
        android:bufferType="normal"
        android:buttonTint="#272323"
        android:text="@string/settings_toggle_dark_mode"
        android:textColor="#F1EAEA"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_settings_title"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:background="#4A4848"
        android:text="@string/settings_title"
        android:textColor="@color/noteTextColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_back2"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_enterSave"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="244dp"
        android:text="@string/settings_enter_is_save"
        android:textColor="#F1EAEA"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sortBy"
        android:layout_width="76dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="316dp"
        android:text="@string/settings_sort_by"
        android:textColor="#F1EAEA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sortByChoice"
        android:layout_width="122dp"
        android:layout_height="43dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="316dp"
        android:text="@string/settings_button_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_textSize"
        android:layout_width="94dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="396dp"
        android:text="@string/settings_text_size"
        android:textColor="#F1EAEA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_textSizeChoice"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="308dp"
        android:text="@string/settings_button_choice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>