<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_button_add_note"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:textColorHint="@color/noteTextColor"

        android:background="@drawable/circle_button"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <ImageButton

        android:id="@+id/main_button_search_open"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:background="@drawable/circle_button"
        android:scrollbarTrackVertical="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <ImageButton

        android:id="@+id/main_button_tools"
        android:background="@drawable/circle_button"
        android:layout_width="57dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <LinearLayout

        android:id="@+id/main_view_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/main_note_view"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:background="@android:color/white"
            android:text="TextView" />
    </LinearLayout>

    <AutoCompleteTextView

        android:id="@+id/main_button_search"
        android:layout_width="203dp"
        android:gravity="fill"
        android:layout_height="45dp"
        android:completionThreshold="1"
        android:hint="@string/main_search_bar"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/buttonChoice"
        android:textColorHint="@color/noteTextColor"
        android:background="@color/buttonBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />


</androidx.constraintlayout.widget.ConstraintLayout>